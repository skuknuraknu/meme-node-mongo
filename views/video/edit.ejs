<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Halaman Video | Edit</title>
</head>
<%- include('../layouts/navbar.ejs') %>
<aside id="default-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0" aria-label="Sidebar">
   <div class="h-full px-3 py-4 overflow-y-auto bg-white shadow-xl">
       <h1 class="bg-purple-700 text-white mb-5 px-4 py-2 rounded shadow-xl">Memesku</h1> 
      <ul class="space-y-2 font-medium">
         <% menu.forEach(function (menu_item) { %>
            <li>
            <a href="<%= menu_item.url_menu %>" class="<%= menu_item.class_menu %>">
               <svg aria-hidden="true" class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path><path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path></svg>
               <span class="ml-3"><%= menu_item.nama_menu %> <% menu_item %></span>
            </a>
         </li>
         <% }) %>
      </ul>
   </div>
</aside>
<div class="flex justify-center items-center min-h-screen">
  <form action="/video/<%= video._id %>/update" method="POST"  class="w-full max-w-lg shadow-lg p-5">
      <h1 class="font-bold text-xl uppercase text-center pb-5">Halaman Edit Video</h1>
        <!-- url video -->
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
              <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="url_video">
                Url video
              </label>
              <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="url_video" type="text" name="url_video" placeholder="Url youtube( id nya saja)" value="<%= video.url_video%>">
            </div>
        </div>
        <!-- desc -->
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="deskripsi_video">
              Deskripsi video
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="deskripsi_video" type="text" name="desc_video" placeholder="Deskripsi video" value="<%= video.desc_video%>">
          </div>
        </div>
        <!-- nama -->
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="nama_video">
              Nama video
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="nama_video" type="text" name="nama_video" placeholder="Nama video mu" value="<%= video.nama_video%>">
          </div>
        </div>
        <!-- durasi -->
        <div class="flex flex-wrap -mx-3 mb-2">
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="durasi_video">
              Durasi video
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="durasi_video" type="text" placeholder="Dalam format menit" name="durasi_video" value="<%= video.durasi_video%>">
          </div>
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="status">
              Status video
            </label>
            <select id="status" name="is_private" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                <option value="public">Public</option>
                <option value="private">Private</option>
              </select>
          </div>
        </div>
        <button type="submit" class="bg-transparent w-full hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
          EDIT VIDEO
        </button>
      </form>
</div>